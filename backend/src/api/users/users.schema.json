{
  "$schema": "http://json-schema.org/draft-07/schema",
  "type": "object",
  "title": "User",
  "description": "The User.",
  "required": [
    "email",
    "name",
    "surname",
    "username",
    "password"
  ],
  "additionalProperties": false,
  "properties": {
    "id": {
      "$id": "#/properties/id",
      "type": "integer",
      "title": "The ID of the user."
    },
    "email": {
      "$id": "#/properties/email",
      "type": "string",
      "title": "The users email. Must be unique.",
      "examples": [
        "designs.p10@gmail.com"
      ]
    },
    "name": {
      "$id": "#/properties/name",
      "type": "string",
      "title": "The users name.",
      "examples": [
        "Pedro"
      ]
    },
    "surname": {
      "$id": "#/properties/surname",
      "type": "string",
      "title": "The users surname.",
      "examples": [
        "Soba"
      ]
    },
    "username": {
      "$id": "#/properties/username",
      "type": "string",
      "title": "The users username.",
      "examples": [
        "P10Designs"
      ]
    },
    "password": {
      "$id": "#/properties/password",
      "type": "string",
      "title": "A hash of the users password."
    },
    "created_at": {
      "$id": "#/properties/created_at",
      "type": "string",
      "title": "The creation date of the user."
    },
    "updated_at": {
      "$id": "#/properties/updated_at",
      "type": "string",
      "title": "The date the user was last updated."
    } 
  }
}